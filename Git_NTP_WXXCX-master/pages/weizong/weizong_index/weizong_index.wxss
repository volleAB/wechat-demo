/**new_list.wxss**/
.btn{
  display: flex;
  width: 100%;
  height:60rpx;
  margin: 20rpx 10rpx 10rpx 10rpx;
  font-family:"Microsoft JhengHei"; 
}  
.vh{
    display:flex;
}
.con-button{
  color: black;
  background-color: lightgreen;
  margin-bottom: 10px;
}
.warp{
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    margin-top:80rpx;
}
navigator { overflow: hidden;}
.list {margin-bottom: 20rpx;height: 200rpx;position: relative;}
.imgs {float: left;}
.imgs image {display: block; width: 300rpx;height: 200rpx;}
.infos {float: left; width: 380rpx; height: 200rpx;padding: 0 0 0 20rpx;}
.title {font-size: 20px;font-family:"Microsoft JhengHei";}
.date {font-size: 16px;color: #aaa; position: absolute;bottom: 0;font-family: "Microsoft JhengHei";}
.loadMore {text-align: center;margin: 30px;color: #aaa;font-size: 16px}
.content-ending{
  width: 100%;
  color: #bbb;
  text-align: center;
  margin: 30rpx auto;
  font-family: "Microsoft JhengHei";
}
.list-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 3px;
  box-shadow: 1px 2px 3px #ddd;
  padding: 0 30rpx;
  font-family: "Microsoft JhengHei";
  color: #ffffff;
  /*background-color: #5dcec6;*/
  background-color: #5fbdce;
}
.list-item-left{
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-right: 10rpx;
}
.list-item-title{
  font-size: 13pt;
  line-height: 175%;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
}
.list-item-time{
  font-size: 10pt;
  line-height: 125%;
  opacity: 0.6;
}
.view_search{
    display: flex;
    margin-bottom: 2%;
    background-color: #ffffff;
    font-family: "Microsoft JhengHei";
}
.image_search{
    width: 50rpx;
    height: 50rpx;
}
.search_input{
    margin-left: 3%;
    margin-bottom: 2%;
    margin-top: 2%;
    border:1px solid #E0E0E0;
    border-radius: 10rpx;
    width: 85%; 
    font-size: 26rpx;
    padding-left: 20rpx;
}
.search_button{
    width: 50rpx;
    height: 50rpx;
    margin-top: 2%;
}
.top{
  width: 100%;
  height: 10%;
  top:0rpx;
  position: fixed;
}

.line{
    margin: 0 10px 0 10px;
    padding: 12px 0 10px;
    border-bottom-style: solid;
    border-bottom-width: 1px;
}


.nav{
    /* display:flex;
    padding-left: 20rpx; */
    white-space: nowrap;    
}
.titles{
  width: 150rpx;
  height: 80rpx; 
  display: inline-block; 
}
.nav_item{
    width: 150rpx;
    margin-right: 30rpx;
    font-size: 30rpx;
    text-align: center;
    font-weight: bold;
    height: 80rpx;
    line-height: 80rpx;
    color: #333;
}
.colorRed{
  color: red;
}
.colorBlack{color: #333;}
.navigator-hover{
    color: red;
    background: #fff;
}
.section{
    margin:0 0 40rpx;
}
.content{
  margin: 10rpx;
}
.TV_title{
    margin: 2% 0 2% 5%;
    font-size: 30rpx;
    font-weight: bold;
    /*text-align: center;*/
}
.TV_content{
    line-height:150%;
    font-size: 28rpx;
    text-indent: 20px;
    margin:2% 3%;
    

}
.nav_main{
    position: relative;
    border-bottom: 1px solid #ccc;
}
.nav_search{
    width:50rpx;
    height: 50rpx;
    position: absolute;
    top:10rpx;
    right: 0;
    opacity:0.8;
    
}
.image_search{
    width: 50rpx;
    height: 50rpx;
    opacity:1;
}
.TV_search{
    display: flex;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
}
.search_input{
    /*background: #E0E0E0;*/
    border: 1px solid #ccc;
    width: 83%;
    border-radius: 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-left: 20rpx;
    padding-left:20rpx;
    font-size: 26rpx;
}
.search_button{
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    margin-left: 5rpx;
}
/**new_list.wxss**/
page{
  width: 100%;
  height: 100%;
}
.btn{
  display: flex;
  width: 100%;
  height:60rpx;
  margin: 20rpx 10rpx 10rpx 10rpx;
  font-family:"Microsoft JhengHei"; 
}  
.vh{
    display:flex;
}
.con-button{
  color: black;
  background-color: lightgreen;
  margin-bottom: 10px;
}
.warp{
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    margin-top:80rpx;
}
navigator { overflow: hidden;}
.list {height: 200rpx;position: relative;}
.imgs {float: left;}
.imgs image {display: block; width: 300rpx;height: 200rpx;}
.infos {float: left; width: 380rpx; height: 200rpx;padding: 0 0 0 20rpx;}
.title {font-size: 20px;font-family:"Microsoft JhengHei";}
.date {font-size: 16px;color: #aaa; position: absolute;bottom: 0;font-family: "Microsoft JhengHei";}
.loadMore {text-align: center;margin: 30px;color: #aaa;font-size: 16px}
.content-ending{
  position: relative;
  bottom: 10rpx;
  width: 100%;
  height: 100rpx;
  margin: 0rpx auto;
  border-radius: 8rpx;
  color: #000000;
  text-align: center;
  line-height: 2.5;
  font-family: "Microsoft JhengHei";
  background: #d6d6d6;
}
.list-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 260rpx;
  border-bottom: 3rpx solid #eeeeee;
  border-radius: 3px;
  padding: 0 30rpx;
  font-family: "Microsoft JhengHei";
  color: #000000;
  background-color: #ffffff;
}
.list-item-left{
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-right: 10rpx;
}
.list-item-title{
  font-size: 13pt;
  line-height: 175%;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
  color: #000000;
}
.list-item-preview{
  font-size: 9pt;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  color: #a9a9a9;
}
.list-item-time{
  width: 180px;
  font-size: 10pt;
  line-height: 125%;
  color: #d6d6d6;
}
.list-item-tag {
  width: 100px;
  font-size: 10pt;
  line-height: 125%;
  color: #d6d6d6;
}
.view_search{
    display: flex;
    margin: 2% 0;
    background-color: #efeff4;
    font-family: "Microsoft JhengHei";
}
.image_search{
    width: 50rpx;
    height: 50rpx;
}
.search_input{
    margin: 2% auto;
    border:1px solid #ffffff;
    border-radius: 10rpx;
    width: 85%;
    font-size: 26rpx;
    padding-left: 20rpx;
    background: #ffffff;
}
.search_button{
    width: 50rpx;
    height: 50rpx;
    margin-top: 2%;
}
scroll-view{
  height: 100%;
  width: 100%;
}
.top{
  width: 100%;
  height: 10%;
  top: -14rpx;
  position: fixed;
}
.con {
  margin-top: 100rpx; 
  background: #efeff4;
}
.title {
  text-align:center;
  margin-bottom:20rpx;
}
.author{
  margin-bottom:30rpx;
}
.details {
  text-indent:2em;
}




/*mdyw.wxss*/
@import "../../../wxParse/wxParse/wxParse.wxss";
.container{
    background: #fff;
    padding: 0 35rpx;
}
.wxParse-h2 {
    font-size: 20px;
    font-weight: bold;
    /* margin-top: 10px; */
}
.s-author{
    font-size: 12pt;
    color:#b2b2b2;
    /* margin:2%; */
}
.article_author{
  text-align: center;
    text-indent: 0;
    color: #A6A6A6;
    /* margin-top: 20px; */
    font-size: 14px;
}
.single-header{
    /* font-size: 27px; */
   
    text-align: center;
}
.s-time{
    font-size: 12pt;
    color:#b2b2b2;
    margin:2%;
}
.s-view{
    font-size: 12pt;
    color:#b2b2b2;
    margin:2%;
}
.single-content{
     margin:2%; 
}
.wxParse-br{
  /* display: none */
}
.info{
    float: left;
    margin-top: 20rpx;
    font-family: "Microsoft JhengHei";
    color: #b2b2b2;
}
.info text{
    padding: 0 20rpx 0 5rpx;
}
.detail{
    font-size: 11pt;
    text-indent: 2em;
    line-height: 1.5;
    padding: 20rpx 15rpx 200rpx;
    word-break: break-all;
    text-align: justify;
    font-family: "Microsoft JhengHei";
}
.files_list {
    position: fixed;
    bottom: -10rpx;
    left: 0;
    right: 0;
    height: 190rpx;
    display: flex;
    flex-direction: column;
    align-items: stretch;
}
.file{
    padding: 0 30rpx 0 50rpx;
    height: 140rpx;
    margin: 0 30rpx;
    background-color: #fcfcfc;
    border: 1rpx solid #ececec;
    border-radius: 3px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.file:active{
    background-color: #fff;
}
.fileNameSource{
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    padding-left: 40rpx;
}
.file-name{
    font-size: 11pt;
    line-height: 150%;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 100%;
    overflow: hidden;
}
.file-source{
    font-size: 10pt;
    color: #919191;
}
.file-img{
    flex: 0 0 39rpx;
    width: 39rpx;
    height: 48rpx;
}
.laiyuan{
    font-size: 14px;
    color: #aaa;
    position:relative;
    bottom: 0;
    font-family: "Microsoft JhengHei";
}
.pages-row {  
  width: 100%;  
  display: flex;  
  flex-direction: row;  
  justify-content:space-around;
} 
.pages-item {  
  padding-right: 30rpx;
  padding-bottom: 20rpx;
  width: 30%;  
  text-align: center; 
  align-items: center;  
  font-family: "Microsoft JhengHei";
  display: flex;  
  font-size: 14px;
  flex-direction: column;  
  background-color: #fff;
  margin-top: 4%;
  margin-left: 5%;
  height: 30%;
} 
.pages-icon {  
  width: 200rpx;  
  height: 200rpx;
  text-align: center;
}  
.boundary{
    width: 100%;
    font-size: 14px;
    text-align: center;
    background-color: elavender;
}
.line{
	width:100%;
	height:2px;
	background-color:#efefef;
}
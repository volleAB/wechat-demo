.container{
    background-color: #fff;
    width: 100%;
    padding: 0;
    padding-top: 30rpx;
    font-size: 11pt;
    box-sizing: border-box;
}
.issues-label{
    font-size: 10pt;
    line-height: 100%;
    color: #999;
    margin: 25rpx 20rpx 15rpx;
}
.issues-panel{
    display: flex;
    flex-direction: column;
    align-items: stretch;
    background-color: #fff;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}
.issues-input{
    border-bottom: 1px solid #e5e5e5;
    padding: 15rpx 25rpx;
}
.issues-textarea{
    padding: 25rpx;
    min-height: 225rpx;
}
.issues-remind {
    flex: 1;
    height: 100%;
    font-size: 9pt;
    line-height: 135%;
    color: #ccc;
    padding: 0 30rpx;
    word-break: break-all;
    text-indent: 1em;
    padding-top: 30rpx;
}
.submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 41.5% 3%;
    height: 80rpx;
    width: 90%;
    border-radius: 3px;
    text-align: center;
    background-color: #448ACA;
    color: #fff;
    font-size: 12pt;
    font-family: "Microsoft JhengHei";
}
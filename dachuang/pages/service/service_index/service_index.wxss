.container {
  padding: 16rpx 20rpx;
  align-items: initial;
}
.option {
  position: relative;
  width: 100%;
  height: 120rpx;
  margin-top: 20rpx;
  font-size: 48rpx;
}
.img {
  width: 100rpx;
  height: 90rpx;
  margin-right:20px;
}
.border {
  display: inline-block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 96%;
  border-top: 5rpx solid #5ee5e6;
  border-bottom: 5rpx solid #5ee5e6;
  border-radius: 12rpx;
}
.right {
  float: right;
  color: #5ee5e6;
  font-size: 70rpx;
}
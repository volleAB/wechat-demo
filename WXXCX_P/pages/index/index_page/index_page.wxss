/**index.wxss**/

.con {
  height: 100%;
  width: 100%;
  font-family: "Microsoft JhengHei";
  color: #000;
} 
.top{
  height: 32%;
}
.bg{
  height: 100%;
}
.bgpic{
  width: 100%;
  height: 68%;
  background-color: #fff;
}
.bgpic image{
  width:100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.pages-row {  
  width: 100%;  
  display: flex;  
  flex-direction: row;  
  justify-content:space-between;
} 
 
.pages-item {  
  padding-right: 30rpx;
  padding-bottom: 20rpx;
  width: 30%;  
  text-align: center; 
  align-items: center;  
  font-family: "Microsoft JhengHei";
  display: flex;  
  font-size: 14px;
  flex-direction: column;  
  margin-top: 4%;
  margin-left: 5%;
  height: 60px;
} 

.pages-icon-wrapper {  
  display: flex;  
  justify-content: space-around;  
  align-items: center;  
  margin: 10rpx;  
  border-radius: 10%;  
  height: 40%;  
}  

.pages-icon-wrapper-no-bg {  
  display: flex;  
  justify-content: space-around;  
  align-items: center;  
  margin: 0rpx;  
  height: 50%;  
} 

.pages-icon {  
  width: 100rpx;  
  height: 100rpx;
  text-align: center;
}  

.pages-text-wrapper {  
  text-align: center;  
}  

.pages-text {  
  font-weight: bolder;
  text-align: center; 
} 
.con{
  margin-top: 20rpx;
}

.user{
  margin-top: 57%;
}
.top2 {
    height: 720rpx;
    position: relative;
    width: 100%;
    overflow: hidden;
}
.top2 .bg {
    position: absolute;
    top: 50%;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: -1;
    height: 50%;
    width: 100%;
}
.pages-row2 {
  margin-top: 63.5%;  
  width: 100%;  
  display: flex;  
  flex-direction: row;  
  justify-content:space-around;
  opacity: 0.8;
} 
.pages-item2 {  
  padding-right: 5rpx;
  padding-bottom: 5rpx;
  width: 27%;  
  text-align: center; 
  align-items: center;  
  font-family: "Microsoft JhengHei";
  display: flex;  
  font-size: 14px;
  flex-direction: column;  
  /*background-color: #fff;*/
  margin-top: 4%;
  margin-left: 2%;
  height: 30%;
} 
.pages-icon2 {  
  width: 200rpx;  
  height: 200rpx;
  text-align: center;
}  
.pages-item2 text{
  color: #000000;
}
.bg {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -1;
  width: 100%;
}